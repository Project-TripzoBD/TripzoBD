<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".noticeUpdate">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:id="@+id/update1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:id="@+id/update2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Token"
        android:id="@+id/update3"/>

    <Button
        android:id="@+id/sentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/audiowide"
        android:text="Sent Notification All"
        android:textColor="@color/white"
        android:onClick="btnclick"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/sentBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/audiowide"
        android:text="Sent Notification To User"
        android:textColor="@color/white"
        android:onClick="btnclick"
        android:textStyle="bold"
        tools:ignore="OnClick" />



</LinearLayout>