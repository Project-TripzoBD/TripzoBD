<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".PaymentInfo">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/logo1" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //name
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Enter your name"
                android:backgroundTint="@color/ForestGreen"
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>
        //phone number
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Enter your phone"
                android:backgroundTint="@color/ForestGreen"
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //From
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boading: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/fromx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="From "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //Destination
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dropping: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Dstination "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //Journey date and time
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure : "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/jdx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="date "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>
            <TextView
                android:id="@+id/jtx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="time "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>
            </LinearLayout>

        </LinearLayout>

        //ticket price
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket price: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tcx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ticket price "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //company name
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Couch: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/cnx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Couch name "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //id
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Couch ID: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/cidx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="couch id "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //seat no
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat no: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/seatx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

        //All pickup point
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boading points: "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/bpx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Boading "
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/reg_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/ForestGreen"
        android:text="PRINT TICKET"
        android:textStyle="bold"
        android:fontFamily="@font/audiowide"
        android:textColor="@color/white" />


</LinearLayout>