<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical"
    tools:context=".Homepage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/IndianRed">
            <include layout="@layout/toolbar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/toolbar_corner_rectangle"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_flight_takeoff_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flights"
                    android:layout_gravity="center"
                    android:fontFamily="@font/tienne"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_apartment_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotels"
                    android:layout_gravity="center"
                    android:fontFamily="@font/tienne"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_train_bus_24" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="    Train\n    &amp; Bus"
                    android:textSize="11dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/tienne"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_sharp_holiday_package_24" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="  Holiday\n  Package"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/tienne"/>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>