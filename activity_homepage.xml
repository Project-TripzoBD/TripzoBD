<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:textColor="@color/ForestGreen"
                    android:fontFamily="@font/audiowide"
                    android:textSize="43dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="your bus tickets"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:textSize="18dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/buslogo"/>

        </LinearLayout>


        //Enter Source
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_my_location_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Source"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"/>

                <AutoCompleteTextView
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:completionThreshold="1"
                    android:fontFamily="@font/tienne"
                    android:hint="ex. Mohakhali"
                    android:backgroundTint="@color/ForestGreen"
                    android:popupBackground="@color/white"  />


            </LinearLayout>
        </LinearLayout>


        //Enter Destination
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_location_on_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Destination"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"/>

                <AutoCompleteTextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:completionThreshold="1"
                    android:fontFamily="@font/tienne"
                    android:hint="ex. Panchagarh"
                    android:backgroundTint="@color/ForestGreen"
                    android:popupBackground="@color/white"  />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Journey"
                android:textColor="@color/black"
                android:fontFamily="@font/tienne"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_calender_24" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:completionThreshold="1"
                    android:fontFamily="@font/tienne"
                    android:hint="Select date"
                    android:backgroundTint="@color/ForestGreen"
                    android:popupBackground="@color/white" />



            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/searchxml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/ForestGreen"
            android:text="Search"
            android:textStyle="bold"
            android:fontFamily="@font/audiowide"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/bookjoinxml"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="ex. Mohakhali - Dhaka"
            android:completionThreshold="3"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/tienne"
            android:popupBackground="@color/white" />

    </LinearLayout>


</ScrollView>