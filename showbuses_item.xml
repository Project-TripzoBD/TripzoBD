<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardviewxml"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="15dp"
    android:orientation="vertical"
    app:cardElevation="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buscompanyxml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tienne"
            android:gravity="center"
            android:text="President Travels"
            android:textColor="@color/ForestGreen"
            android:textSize="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tienne"
            android:gravity="center"
            android:textStyle="bold"
            android:text="--------------------------------------------------------------------------"
            android:textColor="@color/black" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                //Mohakhali - Rajshahi
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/stptxml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tienne"
                        android:text="Mohakhali"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/black_ops_one"
                        android:textStyle="bold"
                        android:text="-"/>
                    <TextView
                        android:id="@+id/edptxml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tienne"
                        android:text="Rajshahi"/>

                </LinearLayout>

                //Departure time
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sttmxml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tienne"
                        android:text="09:00 PM"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/black_ops_one"
                        android:textStyle="bold"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/edtmxml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tienne"
                        android:text="07:00 AM"/>

                </LinearLayout>

                //Date
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tienne"
                        android:text="Date : "/>
                    <TextView
                        android:id="@+id/journeydatexml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tienne"
                        android:text="01-05-2021"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/busidxml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="PT12345"/>
                <TextView
                    android:id="@+id/pip1txml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="pickup point 1"/>
                <TextView
                    android:id="@+id/pip2txml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="pickup point 2"/>
                <TextView
                    android:id="@+id/pip3txml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="pickup point 3"/>
                <TextView
                    android:id="@+id/pip4txml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="pickup point 4"/>
                <TextView
                    android:id="@+id/sedtxml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="search details"/>
                <TextView
                    android:id="@+id/sepk1xml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="search pickup 1"/>
                <TextView
                    android:id="@+id/sepk2xml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="search pickup 2"/>
                <TextView
                    android:id="@+id/sepk3xml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="search pickup 3"/>
                <TextView
                    android:id="@+id/sepk4xml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tienne"
                    android:text="search pickup 4"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginTop="17dp"
                        android:textColor="@color/ForestGreen"
                        android:fontFamily="@font/tienne"
                        android:text="à§³"/>

                    <TextView
                        android:id="@+id/takaxml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/ForestGreen"
                        android:fontFamily="@font/tienne"
                        android:text="1600"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/allptxml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/Silver"
            android:fontFamily="@font/tienne"
            android:text="Mohakhali - Shyamoli - Gabtoli - Malibagh - Kallyanpur"/>

        <Button
            android:id="@+id/viewseatnext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:backgroundTint="@color/ForestGreen"
            android:text="View Details"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
